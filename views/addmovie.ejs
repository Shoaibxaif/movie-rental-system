<!-- views/addMovie.ejs -->
<%- include('header') %>

<body class="bg-gray-900 text-white flex flex-col min-h-screen">
  
  <%- include('navbar') %>
  
  <div class="container mx-auto py-8 flex-grow">
    <h1 class="text-4xl font-bold mb-8 text-center">Add New Movie</h1>
    <form action="/movies/add" method="POST" class="bg-gray-800 p-8 rounded-md shadow-md">
      <div class="mb-4">
        <label for="Title" class="block text-sm font-medium text-gray-300">Title</label>
        <input type="text" id="Title" name="Title" required class="mt-1 px-4 py-2 w-full bg-gray-700 border border-gray-600 rounded-md text-white">
      </div>
      <div class="mb-4">
        <label for="Genre" class="block text-sm font-medium text-gray-300">Genre</label>
        <input type="text" id="Genre" name="Genre" required class="mt-1 px-4 py-2 w-full bg-gray-700 border border-gray-600 rounded-md text-white">
      </div>
      <div class="mb-4">
        <label for="ReleaseDate" class="block text-sm font-medium text-gray-300">Release Date</label>
        <input type="date" id="ReleaseDate" name="ReleaseDate" required class="mt-1 px-4 py-2 w-full bg-gray-700 border border-gray-600 rounded-md text-white">
      </div>
      <div class="mb-4">
        <label for="Rating" class="block text-sm font-medium text-gray-300">Rating</label>
        <input type="number" step="0.1" id="Rating" name="Rating" required class="mt-1 px-4 py-2 w-full bg-gray-700 border border-gray-600 rounded-md text-white">
      </div>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md">Add Movie</button>
    </form>
  </div>

  <!-- Footer -->
  <%- include('footer') %>

</body>
</html>
