<%- include('header') %>

<body class="bg-gray-900 text-white flex flex-col min-h-screen">
    <%- include('navbar') %>
    <div class="container mx-auto py-8 flex-grow">
        <h1 class="text-4xl font-bold text-center mb-8">Edit Rental</h1>

        <form action="/rentals/edit/<%= rental.RentalID %>" method="POST" class="max-w-md mx-auto bg-gray-800 p-6 rounded-md">
            <div class="mb-4">
                <label for="title" class="mb-1 block text-white ">Movie Title</label>
                <select id="title" name="title" class="w-full px-3 py-2 bg-gray-700 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    <% movies.forEach(movie => { %>
                        <option value="<%= movie.Title %>" <%= rental.Title === movie.Title ? 'selected' : '' %>><%= movie.Title %></option>
                    <% }); %>
                </select>
            </div>

            <div class="mb-4">
                <label for="name" class="mb-1 block text-white ">Customer Name</label>
                <select id="name" name="name" class="w-full px-3 py-2 bg-gray-700 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    <% customers.forEach(customer => { %>
                        <option value="<%= customer.Name %>" <%= rental.Name === customer.Name ? 'selected' : '' %>><%= customer.Name %></option>
                    <% }); %>
                </select>
            </div>

            <div class="mb-4">
                <label for="rentalDate" class="mb-1 block text-white ">Rental Date</label>
                <input type="date" id="rentalDate" name="rentalDate" value="<%= moment(rental.RentalDate).format('YYYY-MM-DD') %>" class="w-full px-3 py-2 bg-gray-700 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            </div>

            <div class="mb-4">
                <label for="returnDate" class="mb-1 block text-white ">Return Date</label>
                <input type="date" id="returnDate" name="returnDate" value="<%= rental.ReturnDate ? moment(rental.ReturnDate).format('YYYY-MM-DD') : '' %>" class="w-full px-3 py-2 bg-gray-700 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            </div>

            <div class="mb-4">
                <label for="duePayment" class="mb-1 block text-white ">Due Payment</label>
                <input type="number" id="duePayment" name="duePayment" value="<%= rental.DuePayment %>" class="w-full px-3 py-2 bg-gray-700 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            </div>

            <div class="mb-4">
                <div class="flex items-center">
                    <input type="checkbox" id="fullPayment" name="fullPayment" <%= rental.FullPayment ? 'checked' : '' %> class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                    <label for="fullPayment" class="ml-2 block text-sm ">Full Payment Received</label>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="bg-green-500 hover:bg-green-700 text-white px-4 py-2 rounded-md">Update Rental</button>
                <a href="/rentals" class="ml-2 bg-gray-500 text-white px-4 py-2 rounded-md">Cancel</a>
            </div>
        </form>
    </div>
    <!-- Footer -->
    <%- include('footer') %>
</body>
</html>
