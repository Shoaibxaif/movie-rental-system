<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Rental</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-900 ">
    <div class="container mx-auto py-4">
        <h1 class="text-2xl font-bold mb-4 text-white">Add Rental</h1>
        <form action="/rentals/add" method="POST" class="mb-8">
            <label for="title" class="block mb-2 text-white">Movie Title:</label>
            <select id="title" name="title" required class="border  border-gray-300 px-4 py-2 rounded-md w-full mb-2">
                <% movies.forEach(movie => { %>
                    <option value="<%= movie.Title %>"><%= movie.Title %></option>
                <% }); %>
            </select>

            <label for="name" class="block mb-2 text-white">Customer Name:</label>
            <select id="name" name="name" required class="border  border-gray-300 px-4 py-2 rounded-md w-full mb-2">
                <% customers.forEach(customer => { %>
                    <option value="<%= customer.Name %>"><%= customer.Name %></option>
                <% }); %>
            </select>

            <label for="rentalDate" class="block mb-2 text-white">Rental Date:</label>
            <input type="date" id="rentalDate" name="rentalDate" required class="border border-gray-300 px-4 py-2 rounded-md w-full mb-2">

            <label for="returnDate" class="block mb-2 text-white">Return Date:</label>
            <input type="date" id="returnDate" name="returnDate" class="border border-gray-300 px-4 py-2 rounded-md w-full mb-2">

            <label for="duePayment" class="block mb-2 text-white">Due Payment:</label>
            <input type="number" id="duePayment" name="duePayment" placeholder="Enter due payment" step="0.01" required class="border border-gray-300 px-4 py-2 rounded-md w-full mb-2">

            <label for="fullPayment" class="block mb-2 text-white">Full Payment Received:</label>
            <input type="checkbox" id="fullPayment" name="fullPayment" class="form-checkbox h-5 w-5 text-indigo-600">

            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md mt-4">Add Rental</button>
        </form>
    </div>
</body>
</html>
