<%- include('header') %>

<body class="bg-gray-900 text-white flex flex-col min-h-screen">
    <%- include('navbar') %>
    <div class="container mx-auto py-4">
        <h1 class="text-2xl font-bold text-center mb-4">Manage Rentals</h1>
        <div class="mt-4">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-2xl font-bold">Current Rentals</h2>
                <a href="/rentals/add" class="bg-blue-500 text-white px-4 py-2 rounded-md">Add New Rental</a>
            </div>
            
            <table class="min-w-full divide-y divide-gray-200">
                <thead>
                    <tr>
                        <th class="px-6 py-3 bg-gray-800 text-left text-xs leading-4 font-medium text-gray-400 uppercase tracking-wider">Movie Title</th>
                        <th class="px-6 py-3 bg-gray-800 text-left text-xs leading-4 font-medium text-gray-400 uppercase tracking-wider">Customer Name</th>
                        <th class="px-6 py-3 bg-gray-800 text-left text-xs leading-4 font-medium text-gray-400 uppercase tracking-wider">Rental Date</th>
                        <th class="px-6 py-3 bg-gray-800 text-left text-xs leading-4 font-medium text-gray-400 uppercase tracking-wider">Return Date</th>
                        <th class="px-6 py-3 bg-gray-800 text-left text-xs leading-4 font-medium text-gray-400 uppercase tracking-wider">Due Payment</th>
                        <th class="px-6 py-3 bg-gray-800 text-left text-xs leading-4 font-medium text-gray-400 uppercase tracking-wider">Full Payment Received</th>
                    </tr>
                </thead>
                <tbody>
                    <% rentals.forEach(rental => { %>
                        <tr class="bg-gray-700">
                            <td class="px-6 py-4 whitespace-no-wrap"><%= rental.Title %></td>
                            <td class="px-6 py-4 whitespace-no-wrap"><%= rental.Name %></td>
                            <td class="px-6 py-4 whitespace-no-wrap"><%= moment(rental.RentalDate).format('YYYY-MM-DD') %></td>
                            <td class="px-6 py-4 whitespace-no-wrap"><%= rental.ReturnDate ? moment(rental.ReturnDate).format('YYYY-MM-DD') : '-' %></td>
                            <td class="px-6 py-4 whitespace-no-wrap"><%= rental.DuePayment %></td>
                            <td class="px-6 py-4 whitespace-no-wrap"><%= rental.FullPayment ? 'Yes' : 'No' %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
       <!-- Footer -->
<%- include ('footer') %>
</body>
</html>
