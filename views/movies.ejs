<%- include('header') %>

  <body class="bg-gray-900 text-white flex flex-col min-h-screen">
    
    <%- include('navbar') %>
    
    <div class="container mx-auto py-8 flex-grow">
      <h1 class="text-4xl font-bold mb-8 text-center">Movies</h1>
      <div class="overflow-x-auto">
        <table class="min-w-full bg-gray-800 border border-gray-700">
          <thead>
            <tr>
              <th class="py-2 px-4 border-b border-gray-700 text-center">MovieID</th>
              <th class="py-2 px-4 border-b border-gray-700 text-center">Title</th>
              <th class="py-2 px-4 border-b border-gray-700 text-center">Genre</th>
              <th class="py-2 px-4 border-b border-gray-700 text-center">Release Date</th>
              <th class="py-2 px-4 border-b border-gray-700 text-center">Rating</th>
            </tr>
          </thead>
          <tbody>
            <% movies.forEach(function(movie) { %>
            <tr>
              <td class="py-2 px-4 border-b border-gray-700 text-center">
                <%= movie.MovieID %>
              </td>
              <td class="py-2 px-4 border-b border-gray-700 text-center">
                <%= movie.Title %>
              </td>
              <td class="py-2 px-4 border-b border-gray-700 text-center">
                <%= movie.Genre %>
              </td>
              <td class="py-2 px-4 border-b border-gray-700 text-center">
                <%= moment(movie.ReleaseDate).format('ddd MMM DD YYYY') %>
              </td>
              <td class="py-2 px-4 border-b border-gray-700 text-center">
                <%= movie.Rating %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Footer -->
    <%- include('footer') %>

  </body>
</html>
